@model LoginUser 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" >
    <title>testing</title>
</head>
<body class="body-class">

<div class="enter-form">

  <h3>Login</h3>


  <form asp-controller="User" asp-action="Login" method="POST">

      @* Email  *@
      <div class="mb-3">
        <label asp-for="LoginEmail"></label>
        <span asp-validation-for="LoginEmail" class="text-danger font-weight-bold">
        </span>
        <input class="form-control" asp-for="LoginEmail">
      </div>

      @* Password  *@
      <div class="mb-3">
        <label asp-for="LoginPassword"></label>
        <span asp-validation-for="LoginPassword" class="text-danger font-weight-bold">
        </span>
        <input class="form-control" asp-for="LoginPassword">
      </div>

      <button class="create-acc hvr-bounce-to-bottom">Login</button>

  </form>

  <p class="have-acct center-text"> <a href="/userlogin">Dont have an account? <span class="login-link">Register</span></a></p>

</div>

</body>
</html>